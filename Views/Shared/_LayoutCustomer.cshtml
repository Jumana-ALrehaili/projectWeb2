<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - finalproject</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/finalproject.styles.css" asp-append-version="true" />
</head>


<body>
    <header>
        <nav class="navbar navbar-expand-sm bg-light navbar-light">
            <a class="navbar-brand text-black" href="#"><img src="~/imagesP/season-logo2.png"> </a>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li> <a class="nav-link" asp-controller="useralls" asp-action="customerhome">Home</a></li>
                    <li> <a class="nav-link" asp-controller="items" asp-action="imageslider">Items Slider</a></li>
                    <li><a class="nav-link" asp-controller="orders" asp-action="my_purchase">My purchase</a></li>
                    <li><a class="nav-link" asp-controller="useralls" asp-action="registration">Register</a></li>
                    <li><a class="nav-link" asp-controller="useralls" asp-action="logout">Logout</a></li>

                </ul>
            </div>
        </nav>
    </header>


    <div class="container">
        <main role="main" class="pb-6">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
