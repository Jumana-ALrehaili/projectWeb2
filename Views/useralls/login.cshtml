@model finalproject.Models.userall


<form id="login-form" asp-action="login">
    <div class="containerr">
        <h1>Login</h1>
        <label class="login-data">Username:</label>
        <input id="name" name="na" class="form-control" />

        <label class="login-data">Password:</label>
        <input type="password" id="password" name="pa" class="form-control" onmouseover="autoc()" /> <br />

        <input type="submit" value="Login" class="btn btn-success" onmouseover="autoc()" />
        <div>
            <input type="checkbox" id="rememberme" name="remember">
            <label for="remember">Auto login</label>

            <div><label>Not registered?</label><a asp-action="create"> Create account</a></div>
            <p style="color:red"> @ViewData["message"]</p>

        </div>

    </div>  
</form>

