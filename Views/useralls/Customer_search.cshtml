@model finalproject.Models.userall

@{
    ViewData["Title"] = "Customer_search";
}
﻿@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}



<form asp-action="Customer_search" id="login-form">
    <h1>customer_search</h1>
    <hr />
    <div class="form-group">
        <label class="control-label">Role</label>
        <select class="form-control" name="cata" id="ca" onchange="gettitle()">
            <option value="0">Please select</option>
            <option value="admin">Admin</option>
            <option value="customer">Customer</option>
        </select>

    </div>
    <div class="form-group">
        <label class="control-label">Name</label>
        <select class="form-control" name="tit" id="ti"> </select>
    </div>
    <input type="submit" value="Find" class="btn btn-success" />
   
    <div>
        <hr />
        <dl class="row">
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.name):
            </dt>
            <dd class="col-sm-6">
               <p style="color:darkred"> @Html.DisplayFor(model => model.name)</p>
            </dd>
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.password):
            </dt>
            <dd class="col-sm-6">
                <p style="color:darkred"> @Html.DisplayFor(model => model.password) </p>
            </dd>
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.role):
            </dt>
            <dd class="col-sm-6">
                <p style="color:darkred"> @Html.DisplayFor(model => model.role) </p>
            </dd>
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.registdate):
            </dt>
            <dd class="col-sm-4">
                <p style="color:darkred"> @Html.DisplayFor(model => model.registdate) </p>
            </dd>
        </dl>
    </div>
    <div>
        <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
        <a asp-action="Index">Back to List</a>
    </div>
</form>

<script>
    async function gettitle() {
        var cc = document.getElementById('ca').value;
        var response = await fetch('/getname/' + cc);
        let x = await response.json();
        var dd = "<option> Please select</option>";
        for (i = 0; i < x.length; i++) {
            dd += "<option>" + x[i].name + "</option>";
        }
        document.getElementById("ti").innerHTML = dd;
    }
</script>


